<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_word_view"
    tools:context="com.sleepingbear.english.WordViewActivity"
    android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/my_wv_ll_sample"
        android:id="@+id/my_wv_ll_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word"
                android:id="@+id/my_tv_word"
                android:layout_marginLeft="10dp"
                android:textColor="#e65a5a"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:id="@+id/my_tv_type"
                android:layout_marginLeft="10dp"
                android:textAlignment="gravity"
                android:textSize="13dp"
                android:textStyle="normal"
                android:textColor="#424040"
                android:layout_toRightOf="@+id/my_tv_word"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spelling"
                android:id="@+id/my_tv_spelling"
                android:layout_marginLeft="10dp"
                android:textAlignment="gravity"
                android:textSize="13dp"
                android:textStyle="normal"
                android:textColor="#424040"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/my_ib_tts"
                android:layout_toRightOf="@+id/my_tv_type" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_ib_tts"
                android:src="@drawable/ic_record_voice_over_black_24dp"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/my_ib_myvoc"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_ib_myvoc"
                android:src="@drawable/ic_star_border_black_24dp"
                android:background="@android:color/transparent"
                android:textAlignment="center"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:divider="#e36b38"
            android:dividerPadding="1dp"
            android:layout_marginBottom="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mean"
                android:id="@+id/my_tv_mean"
                android:textColor="#4f8ead"
                android:textSize="13dp"
                android:textIsSelectable="true"
                android:layout_marginLeft="35dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:divider="#e36b38"
            android:dividerPadding="1dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/my_wv_ll_tense">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tense"
                android:id="@+id/my_tv_tense"
                android:textColor="#4f8ead"
                android:textSize="13dp"
                android:textIsSelectable="true"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/my_divider"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp" >
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_lv"
            android:divider="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_wv_ll_sample"
        android:layout_above="@+id/adView"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/my_divider"
            android:layout_marginTop="5dp"
            android:layout_height="2dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="예제 보기 (예제가 많아 시간이 걸립니다.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_expand_more_black_24dp"
                android:id="@+id/my_iv_sample_view"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/my_divider"
            android:layout_alignParentTop="false"
            android:layout_marginTop="5dp">

        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
